<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"/>
    <link rel="stylesheet" href="bower_components/angular-material/angular-material.min.css"/>
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=RobotoDraft:400,500,700"/>
    <link rel="stylesheet" href="css/preloader.css"/>

    <title>DoJugaad</title>

    <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>

</head>


<body ng-app="myApp" ng-controller="AppCtrl" ng-cloak>


<div id="loader-wrapper">
    <div id="loader"></div>

    <div class="loader-section section-left"></div>
    <div class="loader-section section-right"></div>

</div>


<div id="content">
    <% include header %>

    <div layout="row">
        <div hide-sm flex-md="20" flex-gt-md="20" flex-lg="20" flex-gt-lg="20"></div>




        <md-card flex>
            <md-card-content>
                <md-content>

                    <md-button class="md-raised md-primary" ng-href="/jugaad">Ask Jugaad</md-button>
                    <md-button class="md-raised md-primary" ng-href="/idea">Submit Idea</md-button>
                    <md-button class="md-raised md-primary" ng-href="/product">Submit Product</md-button>

                </md-content>

                <md-content>
                    <md-list>
                        <md-list-item class="md-3-line" ng-repeat="item in posts">

                            <div flex class="md-whiteframe-z2" style="margin-bottom: 10px;">
                                <md-content class="md-padding" ng-cloak>
                                    <h3>{{item.title}}</h3>
                                    <p>{{item.description}}</p>
                                    <p>{{item.category}}</p>
                                </md-content>
                            </div>
                        </md-list-item>
                    </md-list>
                </md-content>
            </md-card-content>
        </md-card>



        <div hide-sm flex-md="20" flex-gt-md="20" flex-lg="20" flex-gt-lg="20"></div>

     </div>
</div>

<script src="bower_components/angular/angular.min.js"></script>
<script src="bower_components/angular-aria/angular-aria.min.js"></script>
<script src="bower_components/angular-animate/angular-animate.min.js"></script>
<script src="bower_components/angular-material/angular-material.min.js"></script>
<script src="bower_components/hammerjs/hammer.min.js"></script>
<script src="js/app.js"></script>
<script type="text/javascript">
    $(document).ready(function() {

        setTimeout(function(){
            $('body').addClass('loaded');

        }, 1000);

    });
</script>



</body>
</html>
