<md-card-content>
<form name="idea" class="md-padding" ng-controller="iController" ng-submit="$event.preventDefault()">

    <md-input-container >
        <label class="form_fonts">Title your Idea</label>
        <input class="form_fonts" type="text" data-ng-model="idea.title" required aria-label="Idea Title">
    </md-input-container>

    <md-input-container >
        <label class="form_fonts">Describe your Idea</label>

        <!--text-angular data-ng-model="description" required></text-angular-->
        <textarea class="form_fonts" data-ng-model="idea.description" rows="5" required aria-label="Idea Description"></textarea>
    </md-input-container>

    <md-input-container >
        <label class="form_fonts">Problem solved by Idea</label>

        <input class="form_fonts" type="text" data-ng-model="idea.problem"aria-label="Problem Solved" />
    </md-input-container>


    <div layout-gt-sm="row">

        <md-input-container>
            <md-select data-ng-model="idea.category" placeholder="Specify the most suitable category" class="form_fonts" >
                <md-option ng-repeat="op in opt" value="{{op}}" class="form_fonts">{{op}}</md-option>
            </md-select>
        </md-input-container>
    </div>


    <md-content layout="row" layout-align="center center">
        <md-button class="md-raised md-primary form_fonts" data-ng-click="create()" >Submit</md-button>
        <md-button class="md-raised md-warn form_fonts" data-ng-click="clear()" >
          <md-tooltip>Clear Fields</md-tooltip>
            Clear
        </md-button>
    </md-content>

</form>
</md-card-content>